<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>TeamMate Application</display-name>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InitializationServlet</servlet-name>
        <servlet-class>com.codecool.teammate.controller.InitializationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.codecool.teammate.controller.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>indexServlet</param-value>
        </init-param>

        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>com.codecool.teammate.controller.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>questionServlet</param-value>
        </init-param>

        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>TopicServlet</servlet-name>
        <servlet-class>com.codecool.teammate.controller.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>topicServlet</param-value>
        </init-param>

        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questions</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TopicServlet</servlet-name>
        <url-pattern>/topics</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
</web-app>